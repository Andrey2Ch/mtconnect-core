{
  "name": "mtconnect-checker",
  "version": "1.0.0",
  "description": "MTConnect Local Agent для замены Visual Factories",
  "main": "src/main.ts",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "build-addon": "node-gyp rebuild",
    "start": "node dist/main.js",
    "agent": "npm run dev",
    "machines": "ts-node src/machine-manager.ts",
    "machines:list": "npm run machines list",
    "machines:scan": "npm run machines scan",
    "machines:validate": "npm run machines validate",
    "simulator": "ts-node src/main.ts --simulator",
    "fanuc:start": "powershell -File ./start-all-fanuc-services.ps1",
    "fanuc:stop": "stop-fanuc-services.bat",
    "fanuc:restart": "npm run fanuc:stop && timeout /t 3 /nobreak && npm run fanuc:start",
    "install-services-old": "install_and_start_services.bat"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nan": "^2.17.0",
    "node-addon-api": "^6.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "@types/xml2js": "^0.4.14",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
